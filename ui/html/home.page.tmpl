{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "body"}}
<div>
    {{if .Snippets}}
        <table>
            <tr>
                <th>TITLE</th>
                <th>CREATED</th>
                <th>ID</th>
            </tr>
            {{range .Snippets}}
            <tr>
                <td><a href='/snippet?id={{.ID}}'>{{.Title}}</a></td>
                <td>{{.Created}}</td>
                <td>#{{.ID}}</td>
            </tr>
            {{end}}
        </table>
    {{else}}
        <p>There's nothing to see here</p>
    {{end}}
</div>

{{end}}